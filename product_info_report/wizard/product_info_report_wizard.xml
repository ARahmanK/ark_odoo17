<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_info_report_wizard" model="ir.ui.view">
            <field name="name">Product Information Wizard</field>
            <field name="model">product.info.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_categ_id"/>
                            </group>
                            <group>
                                <field name="product_id"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Print"
                                name="action_print_report"
                                type="object"
                                class="btn btn-primary"
                                close="1"
                                data-hotkey="l"/>
                        <button string="Cancel"
                                name="button_cancel"
                                type="object"
                                class="btn btn-secondary"
                                close="1"
                                data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_info_report_wizard" model="ir.actions.act_window">
            <field name="name">Product Information Wizard</field>
            <field name="res_model">product.info.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_product_info_report_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>